        <TextBox x:Name="txtStreet" HorizontalAlignment="Left" Margin="166,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <TextBox x:Name="txtState" HorizontalAlignment="Left" Margin="542,288,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <TextBox x:Name="txtZipCode" HorizontalAlignment="Left" Margin="542,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <ComboBox x:Name="txtGender" HorizontalAlignment="Left" Margin="542,186,0,0" VerticalAlignment="Top" Width="189">
            <ComboBoxItem Content="Female"/>
            <ComboBoxItem Content="Male"/>
        </ComboBox>

    </Grid>
