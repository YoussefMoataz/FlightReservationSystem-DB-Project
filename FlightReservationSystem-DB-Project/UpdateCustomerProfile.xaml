        <Label Content="Password:" HorizontalAlignment="Left" Margin="58,183,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.509,2.297"/>
        <Label Content="Age:" HorizontalAlignment="Left" Margin="58,232,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.509,2.297"/>
        <Label Content="Date of Birth:" HorizontalAlignment="Left" Margin="422,229,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.509,2.297"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="637,380,0,0" VerticalAlignment="Top" Height="35" Width="94" Click="Button_Click" FontSize="15" Background="#FFCCFFD6"/>
        <DatePicker x:Name="txtDateOfBirth" HorizontalAlignment="Left" Margin="542,233,0,0" VerticalAlignment="Top" Width="189" Height="22"/>
        <TextBox x:Name="txtFName" HorizontalAlignment="Left" Margin="166,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <TextBox x:Name="txtSSN" HorizontalAlignment="Left" Margin="166,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="166,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <TextBox x:Name="txtAge" HorizontalAlignment="Left" Margin="166,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <TextBox x:Name="txtLName" HorizontalAlignment="Left" Margin="542,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="542,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <Label Content="Street:" HorizontalAlignment="Left" Margin="58,332,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.008,0.4" FontSize="15"/>
        <Label Content="State:" HorizontalAlignment="Left" Margin="422,284,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.008,0.4" FontSize="15"/>
