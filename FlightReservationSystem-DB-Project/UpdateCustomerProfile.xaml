        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightReservationSystem_DB_Project"
        mc:Ignorable="d"
        Title="UpdateCustomerProfile" Height="450" Width="800">
    <Grid Background="#FFF4F4F4">
        <TextBlock HorizontalAlignment="Center" Margin="0,27,0,0" TextWrapping="Wrap" Text="Customer Registeration" VerticalAlignment="Top" Height="50" Width="288" FontSize="23" FontWeight="Bold"/>
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="58,85,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.509,2.297"/>
        <Label Content="Last Name:" HorizontalAlignment="Left" Margin="422,85,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Label Content="SSN:" HorizontalAlignment="Left" Margin="58,137,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.509,2.297" HorizontalContentAlignment="Center"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="58,183,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.509,2.297"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="422,137,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.509,2.297"/>
